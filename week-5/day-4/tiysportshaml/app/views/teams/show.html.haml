.page-header
  = link_to teams_path, class: 'btn btn-default' do
    %span.glyphicon.glyphicon-list-alt
    Back
  = link_to edit_team_path(@team), class: 'btn btn-primary' do
    %span.glyphicon.glyphicon-pencil
    Edit
  %h1 Show team

%dl.dl-horizontal
  %dt Name:
  %dd= @team.name
  %dt Description:
  %dd= @team.description
  %dt Mascot:
  %dd= @team.mascot
  %dt Sport:
  %dd= @team.sport
  %dt Image url:
  %dd= @team.image_url
