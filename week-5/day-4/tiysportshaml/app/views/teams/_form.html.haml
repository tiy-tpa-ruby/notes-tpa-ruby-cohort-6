= form_for @team, html: { class: "form-horizontal", role: "form" } do |f|
  -if @team.errors.any?
    .alert.alert-danger.alert-dismissable{role: "alert"}
      %button.close{type: "button", data: {dismiss: "alert"} }
        %span{aria: {hidden: "true"} } &times;
        %span.sr-only Close
      %h4= "#{pluralize(@team.errors.count, "error")} prohibited this team from being saved:"

      %ul
        - @team.errors.full_messages.each do |msg|
          %li= msg

  .form-group
    = f.label :name, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :name, class: 'form-control'
  .form-group
    = f.label :description, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :description, class: 'form-control'
  .form-group
    = f.label :mascot, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :mascot, class: 'form-control'
  .form-group
    = f.label :sport, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :sport, class: 'form-control'
  .form-group
    = f.label :image_url, class: 'col-sm-2 control-label'
    .col-sm-10
      = f.text_field :image_url, class: 'form-control'
  .form-group
    .col-sm-offset-2.col-sm-10
      = f.submit class: 'btn btn-primary'
