<html lang="en">
  <head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <title></title>

    <!-- Bootstrap -->
    <!-- Bootstrap -->
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.4.0/css/font-awesome.min.css">
    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
      <script src="https://oss.maxcdn.com/libs/html5shiv/3.7.2/html5shiv.js"></script>
      <script src="https://oss.maxcdn.com/libs/respond.js/1.4.2/respond.min.js"></script>
    <![endif]-->
    <style>
      .img-rounded {
        border-radius: 16px;
      }

      ul {
        margin: 0;
      }

      .pagination {
        margin: 0;
      }

      table {
        font-size: inherit;
      }

      .login-well {
        display: flex;
        justify-content: space-between;
        align-items: center;
      }
      .login-well div {
        margin: 10px 20px;
      }
    </style>
  </head>
  <body>
    <nav class="navbar navbar-inverse" role="navigation">
      <div class="container-fluid">
        <div class="navbar-header">
          <button type="button" class="navbar-toggle" data-toggle="collapse" data-target="#navbar">
            <span class="sr-only">Toggle navigation</span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
            <span class="icon-bar"></span>
          </button>
          <a class="navbar-brand" href="#">TIY Sports</a>
        </div>

        <div class="collapse navbar-collapse" id="navbar">
          <ul class="nav navbar-nav">
            <li class="active"><a href="#">Home</a></li>
            <li><a href="#">About Us</a></li>
            <li><a href="#">Teams</a></li>
            <li><a href="#">Players</a></li>
            <li><a href="#">Games</a></li>
          </ul>
          <form class="navbar-form navbar-right" role="search">
            <div class="form-group">
              <div class="input-group">
                <input type="text" class="form-control" size="16">
                <span class="input-group-addon">
                  <i class="fa fa-search"></i>
                </span>
              </div>
            </div>
          </form>
        </div>
      </div>
    </nav>
    <div class="container">
      <div class="jumbotron">
        <div class="media">
          <div class="media-body">
            <h1 class="media-heading">TIY Sports</h1>
            <span class="glyphicon glyphicon-heart" aria-hidden="true"></span>
            For the students of The Iron Yard
          </div>
          <div class="media-right">
            <img class="media-object img-circle" src="https://raw.githubusercontent.com/tiy-tpa-ruby/bootstrap-design/master/assets/images/sports.jpg" width="128" height="128">
          </div>
        </div>
      </div>
      <div class="row">
        <div class="col-sm-3 col-md-6 col-xs-12 col-lg-3">
          <div class="thumbnail">
            <img src="https://raw.githubusercontent.com/tiy-tpa-ruby/bootstrap-design/master/assets/images/football.jpg" alt="...">
            <div class="caption text-center">
              <h3>Football</h3>
            </div>
          </div>
        </div>
        <div class="col-sm-3 col-md-6 col-xs-12 col-lg-3">
          <div class="thumbnail">
            <img src="https://raw.githubusercontent.com/tiy-tpa-ruby/bootstrap-design/master/assets/images/baseball.jpg" alt="...">
            <div class="caption text-center">
              <h3>Baseball</h3>
            </div>
          </div>
        </div>
        <div class="col-sm-3 col-md-6 col-xs-12 col-lg-3">
          <div class="thumbnail">
            <img src="https://raw.githubusercontent.com/tiy-tpa-ruby/bootstrap-design/master/assets/images/basketball.jpg" alt="...">
            <div class="caption text-center">
              <h3>Basketball</h3>
            </div>
          </div>
        </div>
        <div class="col-sm-3 col-md-6 col-xs-12 col-lg-3">
          <div class="thumbnail">
            <img src="https://raw.githubusercontent.com/tiy-tpa-ruby/bootstrap-design/master/assets/images/quidditch.jpg" alt="...">
            <div class="caption text-center">
              <h3>Quidditch</h3>
            </div>
          </div>
        </div>
      </div>
      <div class="alert alert-warning" role="alert">
        <span class="lead">
          We've added some brand new features in version 2.0!
        </span>
        <a href='#'>Learn More</a>
      </div>
      <div class="well well-sm login-well">
        <div>
          <span class="glyphicon glyphicon-user" aria-hidden="true"></span>
          <span>Please <strong>log in</strong> to edit</span>
        </div>
        <div>
          <button type="button" class="btn btn-primary">
            <i class="fa fa-facebook"></i>
            Facebook
          </button>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">
            <i class="fa fa-chevron-circle-right" aria-hidden="true"></i>
            Teams <span class="badge pull-right"><%= @teams.count%>  teams</span>
          </h3>
        </div>
        <ul class="list-group">
          <% @teams.each do |team| %>
          <li class="list-group-item">
            <div class="media">
              <div class="media-left">
                <a href="#">
                  <img class="media-object img-rounded" src= "<%= team.image_url %>" width="64" height="64">
                </a>
              </div>
              <div class="media-body">
                <h4 class="media-heading">
                  <%= team.name %>
                  <span class="pull-right badge"><%= team.players.count %> players</span>
                </h4>
                <%= team.description %>
              </div>
            </div>
          </li>
          <% end %>
        </ul>
        <div class="panel-footer">
          <nav aria-label="Page navigation" class="text-center">
            <ul class="pagination pagination-sm">
              <li>
                <a href="#" aria-label="Previous">
                  <span aria-hidden="true">&laquo;</span>
                </a>
              </li>
              <li><a href="#">1</a></li>
              <li><a href="#">2</a></li>
              <li class="active"><a href="#">3</a></li>
              <li><a href="#">4</a></li>
              <li><a href="#">5</a></li>
              <li><a href="#">6</a></li>
              <li>
                <a href="#" aria-label="Next">
                  <span aria-hidden="true">&raquo;</span>
                </a>
              </li>
            </ul>
          </nav>
        </div>
      </div>
      <div class="panel panel-primary">
        <div class="panel-heading">
          <h3 class="panel-title">
            <i class="fa fa-check-square-o" aria-hidden="true"></i>
            Games
          </h3>
        </div>
        <table class="table table-condensed">
          <thead>
             <tr>
               <th>#</th>
               <th>Home Team</th>
               <th>Away Team</th>
               <th>Score</th>
             </tr>
          </thead>
          <tbody>
            <tr class='success'>
              <th scope='row'>1</th>
              <td>Tampa Dart Dynamos</td>
              <td>Buffalo BullsEyes</td>
              <td>20-17</td>
            </tr>
            <tr>
              <th scope='row'>2</th>
              <td>St Pete Ping Pong Power House</td>
              <td>Philly Paddlers</td>
              <td>18-12</td>
            </tr>
             <tr>
               <th scope='row'>3</th>
               <td>Orlando Golf Gang</td>
               <td>Portland Putters</td>
               <td>2-1</td>
             </tr>
          </tbody>
        </table>
      </div>
    </div>
    <!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.11.3/jquery.min.js"></script>
    <!-- Include all compiled plugins (below), or include individual files as needed -->
    <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>
  </body>
</html>
